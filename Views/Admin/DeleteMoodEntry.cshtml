@model WellnessTracker.Models.MoodEntry
@{
    ViewData["Title"] = "Delete Mood Entry";
}

<h2>Delete Mood Entry</h2>

<h4>Are you sure you want to delete this mood entry?</h4>

<div>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Mood:</strong> @Model.MoodRating</p>
    <p><strong>Notes:</strong> @Model.Notes</p>
</div>

<form asp-action="DeleteMoodEntry" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="UserMoodEntries" asp-route-userId="@Model.UserId" class="btn btn-secondary">Cancel</a>
</form>
