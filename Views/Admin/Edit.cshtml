@model WellnessTracker.Models.UserProfile

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HeightIn"></label>
        <input asp-for="HeightIn" class="form-control" />
        <span asp-validation-for="HeightIn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeightLb"></label>
        <input asp-for="WeightLb" class="form-control" />
        <span asp-validation-for="WeightLb" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
<input type="hidden" asp-for="Id" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}