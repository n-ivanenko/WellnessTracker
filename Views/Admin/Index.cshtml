@model IEnumerable<WellnessTracker.Models.AdminUserDetailsViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Email</th>
            <th>Name</th>
            <th>Age</th>
            <th>Height (In)</th>
            <th>Weight (Lb)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.User.Id</td>
                <td>@user.User.Email</td>
                <td>@user.Profile?.Name</td>
                <td>@(user.Profile?.Age.ToString() ?? "N/A")</td>
                <td>@(user.Profile?.HeightIn.ToString() ?? "N/A")</td>
                <td>@(user.Profile?.WeightLb.ToString() ?? "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.User.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.User.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.User.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
