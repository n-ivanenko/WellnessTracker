@model WellnessTracker.Models.AdminUserDetailsViewModel

<h2>User Details</h2>

<div>
    <p><strong>User ID:</strong> @Model.User.Id</p>
    <p><strong>Email:</strong> @Model.User.Email</p>
    <p><strong>Age:</strong> @Model.Profile?.Age</p>
    <p><strong>Height:</strong> @Model.Profile?.HeightIn</p>
    <p><strong>Weight:</strong> @Model.Profile?.WeightLb</p>
</div>

<hr />

<h3>Manage Entries</h3>
<div class="d-grid gap-2">
    <a asp-action="UserMoodEntries" asp-route-id="@Model.User.Id" class="btn btn-primary">View Mood Entries</a>
    <a asp-action="UserCalorieEntries" asp-route-id="@Model.User.Id" class="btn btn-primary">View Calorie Logs</a>
    <a asp-action="UserSleepEntries" asp-route-id="@Model.User.Id" class="btn btn-primary">View Sleep Logs</a>
    <a asp-action="UserWorkoutEntries" asp-route-id="@Model.User.Id" class="btn btn-primary">View Workout Logs</a>
    <a asp-action="UserHabits" asp-route-id="@Model.User.Id" class="btn btn-primary">View Habits</a>
</div>
