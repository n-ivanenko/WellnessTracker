@model WellnessTracker.Models.SleepLogEntry

<h2>Delete Sleep Entry</h2>

<div>
    <h4>Are you sure you want to delete this entry?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoursSlept)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoursSlept)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SleepQuality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SleepQuality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>

    <form asp-action="DeleteSleepEntry" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="UserSleepEntries" asp-route-userId="@Model.UserId" class="btn btn-secondary">Cancel</a>
    </form>
</div>