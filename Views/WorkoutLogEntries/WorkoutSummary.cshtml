@{
    ViewData["Title"] = "Workout Summary";
    var selectedDate = ((DateTime)ViewBag.SelectedDate).ToString("yyyy-MM-dd");
    var totalHours = ViewBag.TotalWorkoutHours;
    var totalCalories = ViewBag.TotalCaloriesBurned;
}

<h2>Workout Summary for @selectedDate</h2>

<div class="alert alert-primary">
    <p><strong>Total Hours Worked Out:</strong> @totalHours</p>
    <p><strong>Total Calories Burned:</strong> @totalCalories</p>
</div>

<form method="get">
    <label for="date">Choose a date:</label>
    <input type="date" name="date" id="date" value="@selectedDate" />
    <button type="submit" class="btn btn-outline-primary">View</button>
</form>
