@model WellnessTracker.Models.UserGoals
@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Set Workout Goal";
    var recommended = ViewBag.RecommendedWorkout as int?;
}

<h2>Set Your Workout Goal</h2>

@if (recommended != null)
{
    <div class="alert alert-info">
        <strong>Recommended:</strong> @recommended minutes based on your profile.
    </div>
}

<form asp-controller="WorkoutLogEntries" asp-action="SetGoal" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="WorkoutGoal" class="form-label"></label>
        <input asp-for="WorkoutGoal" class="form-control" type="number" min="0" step="1" />
        <span asp-validation-for="WorkoutGoal" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Goal</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
