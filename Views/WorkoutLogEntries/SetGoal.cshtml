@model WellnessTracker.Models.UserGoal

<h2>Set Your Goals</h2>

<form asp-controller="WorkoutLogEntries" asp-action="SetGoal" method="post">

    <div class="form-group">
        <label asp-for="WorkoutGoal"></label>
        <input asp-for="WorkoutGoal" class="form-control" />
        <span asp-validation-for="WorkoutGoal" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Goals</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
