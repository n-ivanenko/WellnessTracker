@model WellnessTracker.Models.HabitEntry

@{
    ViewData["Title"] = "Delete Habit";
}

<h1 class="mb-4 text-danger">Delete Habit</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="card my-4">
    <div class="card-body">
        <h4 class="card-title">Habit Details</h4>
        <hr />
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.HabitName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.HabitName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Notes)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Notes)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
