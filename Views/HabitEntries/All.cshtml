@model IEnumerable<WellnessTracker.Models.HabitEntry>

@{
    ViewData["Title"] = "All Habits";
}

<h2 class="mb-4">All Habits</h2>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Habit Name</th>
            <th>Notes</th>
            <th style="width: 140px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var habit in Model)
        {
            <tr>
                <td>@habit.HabitName</td>
                <td>@habit.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@habit.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                    <form asp-action="Delete" asp-route-id="@habit.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this habit?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Weekly Tracker</a>
