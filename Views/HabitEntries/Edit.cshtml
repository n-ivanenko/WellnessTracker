@model WellnessTracker.Models.HabitEntry

@{
    ViewData["Title"] = "Edit Habit";
}

<h1 class="mb-4">Edit Habit</h1>

<h4>Habit Details</h4>
<hr />

<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Edit" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="HabitName" class="form-label"></label>
                <input asp-for="HabitName" class="form-control" />
                <span asp-validation-for="HabitName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
