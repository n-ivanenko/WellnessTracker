@model WellnessTracker.Models.HabitEntry

@{
    ViewData["Title"] = "Create Habit";
}

<h1 class="mb-4">Create New Habit</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="HabitName" class="form-label"></label>
                <input asp-for="HabitName" class="form-control" />
                <span asp-validation-for="HabitName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
