@model IEnumerable<WellnessTracker.Models.CalorieLogEntry>


@{
    ViewData["Title"] = "Index";
}
<h1>Calorie Log Entries</h1>

@{
    var goal = ViewBag.CalorieGoal as double?;
    var consumed = ViewBag.TodayCalories as double?;
    var percentage = ViewBag.CaloriesPercentage as int? ?? 0;
    int currentOffset = ViewBag.WeekOffset ?? 0;

    var weekStart = DateTime.Today.AddDays(currentOffset * 7).AddDays(-(int)DateTime.Today.DayOfWeek + (DateTime.Today.DayOfWeek == DayOfWeek.Sunday ? -6 : 1));
    var weekEnd = weekStart.AddDays(6);

}

@if (goal.HasValue)
{
    <div class="mb-4">
        <h4>Today's Calorie Progress (@DateTime.Today.ToString("MMMM dd"))</h4>
        <a asp-controller="CalorieLogEntries" asp-action="SetGoal" class="btn btn-sm btn-outline-primary ms-2">Edit Goal</a>
        <p><strong>Goal:</strong> @goal.Value</p>
        <p><strong>Consumed:</strong> @consumed</p>

        <div class="progress" style="height: 25px;">
            <div class="progress-bar @(percentage < 100 ? "bg-info" : "bg-success")"
                 role="progressbar"
                 style="width: @percentage%"
                 aria-valuenow="@percentage"
                 aria-valuemin="0"
                 aria-valuemax="100">
                @percentage%
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        You haven't set a calorie goal yet. <a asp-controller="CalorieLogEntries" asp-action="SetGoal">Set your goal</a>.
    </div>
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <strong>Week:</strong> @weekStart.ToString("MMM dd") - @weekEnd.ToString("MMM dd")
    </div>
    <div>
        <a class="btn btn-outline-secondary me-2" href="@Url.Action("Index", new { weekOffset = currentOffset - 1 })">← Previous Week</a>
        @if (weekEnd < DateTime.Today)
        {
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", new { weekOffset = currentOffset + 1 })">Next Week →</a>
        }
        else
        {
            <button class="btn btn-outline-secondary" disabled>Next Week →</button>
        }
    </div>
</div>
<h4>This Week's Calorie Breakdown</h4>
<table class="table table-bordered w-50">
    <thead>
        <tr>
            @foreach (var day in ((IDictionary<string, double>)ViewBag.WeeklyCalories).Keys)
            {
                <th>@day</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var calories in ((IDictionary<string, double>)ViewBag.WeeklyCalories).Values)
            {
                <td>@calories</td>
            }
        </tr>
    </tbody>
</table>

<div class="alert alert-info">
    <strong>Weekly Calorie Average:</strong> @ViewBag.WeeklyAverageCalories.ToString("0.##") kcal
    @if (ViewBag.CalorieGoal != null)
    {
        <span>
            (
            @if (ViewBag.WeeklyAverageCalories >= ViewBag.CalorieGoal)
            {
                <span class="text-success">Above Goal</span>
            }
            else
            {
                <span class="text-warning">Below Goal</span>
            }
            )
        </span>
    }
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Entry</a>
    <a href="@Url.Action("CalorieSummary", "CalorieLogEntries")" class="btn btn-secondary">
        View Calorie Summary
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Date.ToString("yyyy-MM-dd")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
