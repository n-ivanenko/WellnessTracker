@model WellnessTracker.Models.CalorieLogEntry

@{
    ViewData["Title"] = "Calorie Entry Details";
}

<h1 class="mb-4 text-primary"><i class="bi bi-clipboard2-check me-2"></i>Calorie Entry Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-9">
                @Model.Date.ToString("MMMM dd, yyyy")
            </dd>

            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.FoodItem)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FoodItem)
            </dd>

            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Calories)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Calories) kcal
            </dd>

            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary">
        <i class="bi bi-pencil-square me-1"></i>Edit
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>
