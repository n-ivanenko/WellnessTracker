@model WellnessTracker.Models.CalorieLogEntry

@{
    ViewData["Title"] = "Delete Calorie Entry";
}

<h1 class="mb-4 text-danger"><i class="bi bi-trash3 me-2"></i>Delete Calorie Entry</h1>

<h3 class="mb-3">Are you sure you want to delete this entry?</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-end fw-bold">@Html.DisplayNameFor(m => m.Date)</dt>
            <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3 text-end fw-bold">@Html.DisplayNameFor(m => m.FoodItem)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.FoodItem)</dd>

            <dt class="col-sm-3 text-end fw-bold">@Html.DisplayNameFor(m => m.Calories)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Calories) kcal</dd>

            <dt class="col-sm-3 text-end fw-bold">@Html.DisplayNameFor(m => m.Notes)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Notes)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash3-fill me-1"></i>Delete
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</form>
