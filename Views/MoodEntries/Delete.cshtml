@model WellnessTracker.Models.MoodEntry

@{
    ViewData["Title"] = "Delete Mood Entry";
}

<h1 class="mb-4">Delete Mood Entry</h1>

<h3 class="mb-3 text-danger">Are you sure you want to delete this?</h3>

<div class="card p-4 mb-4">
    <h4 class="mb-3">MoodEntry Details</h4>
    <dl class="row">
        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.MoodRating)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MoodRating)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="d-flex align-items-center gap-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
