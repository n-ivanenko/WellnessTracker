@model UserProfile

@{
    ViewData["Title"] = "Create User Profile";
}

<h1>Create Your Profile</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeightIn"></label>
        <input asp-for="HeightIn" class="form-control" />
        <span asp-validation-for="HeightIn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeightLb"></label>
        <input asp-for="WeightLb" class="form-control" />
        <span asp-validation-for="WeightLb" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Profile</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
