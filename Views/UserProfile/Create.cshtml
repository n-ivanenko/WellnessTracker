@model WellnessTracker.Models.UserProfile

<h2>Create User Profile</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HeightIn" class="form-label"></label>
        <input asp-for="HeightIn" class="form-control" />
        <span asp-validation-for="HeightIn" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="WeightLb" class="form-label"></label>
        <input asp-for="WeightLb" class="form-control" />
        <span asp-validation-for="WeightLb" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
