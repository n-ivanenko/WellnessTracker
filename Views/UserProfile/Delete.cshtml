@model WellnessTracker.Models.UserProfile

@{
    ViewData["Title"] = "Delete Profile";
}

<h2>Delete Profile</h2>

<h3>Are you sure you want to delete this profile?</h3>

<div>
    <h4>User Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Height (inches)</dt>
        <dd class="col-sm-10">@Model.HeightIn</dd>

        <dt class="col-sm-2">Weight (lbs)</dt>
        <dd class="col-sm-10">@Model.WeightLb</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>