@model WellnessTracker.Models.UserProfile

<h2>Delete User Profile</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>User Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Age)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Age)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.HeightIn)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.HeightIn)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.WeightLb)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.WeightLb)</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
