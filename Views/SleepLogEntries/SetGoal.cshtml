@model WellnessTracker.Models.UserGoals
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Set Sleep Goal";
    var recommended = ViewBag.RecommendedSleep as int?;
}

<h2 class="mb-4">Set Your Sleep Goal</h2>

@if (recommended != null)
{
    <div class="alert alert-info">
        <strong>Recommended:</strong> @recommended hours based on your profile.
    </div>
}

<form asp-action="SetGoal" method="post" style="max-width: 400px;">
    <div class="mb-3">
        <label asp-for="SleepGoal" class="form-label"></label>
        <input asp-for="SleepGoal" class="form-control" />
        <span asp-validation-for="SleepGoal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
