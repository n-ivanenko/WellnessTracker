@model WellnessTracker.Models.SleepLogEntry

@{
    ViewData["Title"] = "Delete Sleep Entry";
}

<h1 class="mb-4">Delete Sleep Entry</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Sleep Log Entry Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HoursSlept)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.HoursSlept)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SleepQuality)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SleepQuality)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
