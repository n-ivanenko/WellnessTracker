@model IEnumerable<WellnessTracker.Models.SleepLogEntry>

@{
    ViewData["Title"] = "Index";
}
<h1>Sleep Log Entries</h1>
@{
    var goal = ViewBag.SleepGoal as double?;
    var total = ViewBag.TodaySleep as double? ?? 0;
    var sleepStatus = ViewBag.SleepStatus as string ?? "No Goal Set";
    var percentage = ViewBag.SleepPercentage as int? ?? 0;
 
}

@if (total == 0 && (ViewBag.WeeklySleep == null || ((IDictionary<string, double>)ViewBag.WeeklySleep).Values.All(v => v == 0)))
{
    <div class="alert alert-warning">
        No sleep entries found. Enter data to see summary.
    </div>
}
else
{
@if (goal.HasValue)
{
    <div class="mb-4">
        <h4>Today's Calorie Progress (@DateTime.Today.ToString("MMMM dd"))</h4>
        <p><strong>Goal:</strong> @goal.Value</p>
        <p><strong>Slept:</strong> @total</p>

        <div class="progress" style="height: 25px;">
            <div class="progress-bar @(percentage < 100 ? "bg-info" : "bg-success")"
                 role="progressbar"
                 style="width: @percentage%"
                 aria-valuenow="@percentage"
                 aria-valuemin="0"
                 aria-valuemax="100">
                @percentage%
            </div>
        </div>
    </div>
}
<h4>This Week's Sleep Breakdown</h4>
<table class="table table-bordered w-50">
    <thead>
        <tr>
            @foreach (var day in ((IDictionary<string, double>)ViewBag.WeeklySleep).Keys)
            {
                <th>@day</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var HoursSlept in ((IDictionary<string, double>)ViewBag.WeeklySleep).Values)
            {
                <td>@HoursSlept</td>
            }
        </tr>
    </tbody>
</table>

<div class="alert alert-info">
    <strong>Weekly Sleep Average:</strong> @ViewBag.WeeklyAverageSleep.ToString("0.##") hours
    @if (ViewBag.SleepGoal != null)
    {
        <span>
            (
            @if (ViewBag.WeeklyAverageSleep >= ViewBag.SleepGoal)
            {
                <span class="text-success">Above Goal</span>
            }
            else
            {
                <span class="text-warning">Below Goal</span>
            }
            )
        </span>
    }
</div>
}
<p>
    <a asp-action="Create">Create New</a>
    <a href="@Url.Action("SleepSummary", "SleepLogEntries")" class="btn btn-info">
        View Sleep Summary
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursSlept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SleepQuality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursSlept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SleepQuality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
