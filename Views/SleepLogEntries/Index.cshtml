@model IEnumerable<WellnessTracker.Models.SleepLogEntry>

@{
    ViewData["Title"] = "Index";
}
<h1>Sleep Log Entries</h1>
@{
    var goal = ViewBag.SleepGoal as double?;
    var total = ViewBag.TodaySleep as double? ?? 0;
    var sleepStatus = ViewBag.SleepStatus as string ?? "No Goal Set";
    var percentage = ViewBag.SleepPercentage as int? ?? 0;
    int currentOffset = ViewBag.WeekOffset ?? 0;
    var weekStart = DateTime.Today.AddDays(currentOffset * 7).AddDays(-(int)DateTime.Today.DayOfWeek + (DateTime.Today.DayOfWeek == DayOfWeek.Sunday ? -6 : 1));
    var weekEnd = weekStart.AddDays(6);
 
}

else
{
@if (goal.HasValue)
{
    <div class="mb-4">
        <h4>Today's Calorie Progress (@DateTime.Today.ToString("MMMM dd"))</h4>
            <a asp-controller="SleepLogEntries" asp-action="SetGoal" class="btn btn-sm btn-outline-primary ms-2">Edit Goal</a>
        <p><strong>Goal:</strong> @goal.Value</p>
        <p><strong>Slept:</strong> @total</p>

        <div class="progress" style="height: 25px;">
            <div class="progress-bar @(percentage < 100 ? "bg-info" : "bg-success")"
                 role="progressbar"
                 style="width: @percentage%"
                 aria-valuenow="@percentage"
                 aria-valuemin="0"
                 aria-valuemax="100">
                @percentage%
            </div>
        </div>
    </div>
}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <strong>Week:</strong> @weekStart.ToString("MMM dd") - @weekEnd.ToString("MMM dd")
        </div>
        <div>
            <a class="btn btn-outline-secondary me-2" href="@Url.Action("Index", new { weekOffset = currentOffset - 1 })">← Previous Week</a>
            @if (weekEnd < DateTime.Today)
            {
                <a class="btn btn-outline-secondary" href="@Url.Action("Index", new { weekOffset = currentOffset + 1 })">Next Week →</a>
            }
            else
            {
                <button class="btn btn-outline-secondary" disabled>Next Week →</button>
            }
        </div>
    </div>

<h4>This Week's Sleep Breakdown</h4>
<table class="table table-bordered w-50">
    <thead>
        <tr>
            @foreach (var day in ((IDictionary<string, double>)ViewBag.WeeklySleep).Keys)
            {
                <th>@day</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var HoursSlept in ((IDictionary<string, double>)ViewBag.WeeklySleep).Values)
            {
                <td>@HoursSlept</td>
            }
        </tr>
    </tbody>
</table>

<div class="alert alert-info">
    <strong>Weekly Sleep Average:</strong> @ViewBag.WeeklyAverageSleep.ToString("0.##") hours
    @if (ViewBag.SleepGoal != null)
    {
        <span>
            (
            @if (ViewBag.WeeklyAverageSleep >= ViewBag.SleepGoal)
            {
                <span class="text-success">Above Goal</span>
            }
            else
            {
                <span class="text-warning">Below Goal</span>
            }
            )
        </span>
    }
</div>
}
<p>
    <a asp-action="Create">Create New</a>
    <a href="@Url.Action("SleepSummary", "SleepLogEntries")" class="btn btn-info">
        View Sleep Summary
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursSlept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SleepQuality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Date.ToString("yyyy-MM-dd")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursSlept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SleepQuality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
