@model WellnessTracker.Models.HabitCompletion

@{
    ViewData["Title"] = "Habit Completion Details";
}

<h1 class="mb-4">Habit Completion Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3">HabitCompletion</h4>
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.HabitEntry)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.HabitEntry.HabitName)
            </dd>

            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.IsCompleted)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IsCompleted)
            </dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
