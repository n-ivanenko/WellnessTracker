@model WellnessTracker.Models.HabitCompletion

@{
    ViewData["Title"] = "Delete Habit Completion";
}

<h1 class="mb-4">Delete Habit Completion</h1>

<h3 class="mb-3 text-danger">Are you sure you want to delete this?</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3">HabitCompletion Details</h4>
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.HabitEntry)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.HabitEntry.HabitName)
            </dd>

            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.IsCompleted)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IsCompleted)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
